{% extends 'layout.njk' %}

{% block filter %}
  <form action="/recipes/search" method="get" class="form_filter">
    <input type="text" name="filter" value="{{filter}}" placeholder="Nome da receita" class="input_filter">
    <button type="submit" class="button_filter">Procurar</button>
  </form>
{% endblock  %}
{% block content %}
<main>
  <article id="results">
    <h2 class="title_results">Buscando por {{filter}}</h2>
    <div class="cards">
      {% for recipe in recipes %}
        <div class="card" id="{{recipe.id}}">
          <div class="image-recipe">
            <img src="{{recipe.src}}"/>
          </div>
          <h3 class="subtitle">{{recipe.title}}</h3>
          <p class="author">por {{recipe.chef_name}}</p>
        </div>
      {% endfor %}
    </div>
  </article>
</main>
{% endblock %}