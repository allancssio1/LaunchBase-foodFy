{% extends "layout.njk" %}

{% block content %}
<section class="card-recipes">
  
  <div id="image-recipe">
    <img src="{{recipe.image}}" alt="{{recipe.title}}">
  </div>
  
  <article class="recipe-title">
    <h1>{{recipe.title}}</h1>
    <h2>por {{recipe.chef_name}}</h2>
  </article>

  <main class="recipe-main">
    
    <div class="details">
      <div class="flex-teme">
        <h2>Ingredientes</h2>  
        <h3 class="button">Esconder</h3>
      </div>
      <div class="content">
        <ul>
        {% for ingredient in recipe.ingredients %}
          <li>{{ingredient}}</li>
        {% endfor %}
        </ul>
      </div>
    </div>
    
    <div class="details">
      <div class="flex-teme">
        <h2>Modo de Preparo</h2>  
        <h3 class="button">Esconder</h3>
      </div>
      <div class="content">
        <ul>
        {% for preparation in recipe.preparation %}
          <li>{{preparation}}</li>
        {% endfor %}
        </ul>
      </div>
    </div>
    
    <div class="details">
      <div class="flex-teme">
        <h2>Informações adicionais</h2>  
        <h3 class="button">Esconder</h3>
      </div>
      <div class="content">
        <p>{{recipe.information}}</p>
      </div>
  </main>

  {% include 'scriptShow.njk' %}
  
</section>
{% endblock  %}