{% extends "layout.njk" %}}

{% block head %}
    <title>Foodfy</title>
{% endblock %}

{% block content %}    
    <main class="artCenter">
        <div class="text">
            <h2 id="titleIndex">As melhores receitas</h2>
            <p id="paragrafoCenter">
                Aprenda a construir os melhores pratos
                com receitas criadas por profissionais
                do mundo inteiro.
            </p>
        </div>
        <div class="image">
            <img src="/chef.png" alt="chefe Foodfy" id="chef"/>
        </div>
    </main>

    <article class="more-recipes">
        <h2 class="title-more-recipes">Mais acessadas</h2>
        <div class="cards">
            {% for item in items %}
                <div class="card" id="{{item.id}}" >
                    <div class="image-recipe">
                        <img src="{{item.image}}"/>
                    </div>
                    <h3 class="subtitle">{{item.title}}</h3>
                    <p class="author">{{item.author}}</p>
                </div>
            {% endfor %}
        </div>
    </article>
    

    <footer>
        <h3>Todos direitos reservados, receitas Foodfy.</h3>
    </footer>

    <script src="/script.js"></script>

{% endblock %}