<div class="form-items">
  <div>Imagem da receita</div>
  <input type="url" name="image" value="{{recipe.image}}" placeholder="http:\\"/>
</div>

<div class="form-items">
  <div>Nome da Receita</div>
  <input type="text" name="title" value="{{recipe.title}}" placeholder=""/>
</div>

<div class="form-items">
  <div>Chef</div>
  <select name="chef">
      <option disabled 
        {% if not chef_id %}
          selected
        {% endif %}>
        Selecione um chef
      </option>
      {% for chef in chefOptions %}
      <option value="{{chef.id}}"
        {% if chef.id == chef_id %}
          selected
        {% endif %} placeholder="Selecione um chef">
        {{chef.name}}
      </option>
      {% endfor %}
  </select>
</div>

<div class="form-items">
  <div>Ingrediente</div>
    <div id="ingredients">
      {% if not recipe.ingredients %}
        <input type="text" name="ingredients[]" value="">
      {% else %}
        {% for item in recipe.ingredients %}
          <input type="text" name="ingredients[]" value="{{item}}">
        {% endfor %}
      {% endif %}
    </div>
  <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</div>

<div class="form-items">
  <div>Modo de preparo</div>
    <div id="preparations">

      {% if not recipe.preparation %}
        <input type="text" name="preparation[]" value="">
      {% else %}
        {% for item in recipe.preparation %}
          <input type="text" name="preparation[]" value="{{item}}">
        {% endfor %}
      {% endif %}

    </div>
  <button type="button" class="add-preparation">Adicionar modo de preparo</button>
</div>

<div class="form-items">
  <div>Informações adicionais</div>
  <textarea id="text-area-last-input" name="information">{{recipe.information}}</textarea>
</div>
