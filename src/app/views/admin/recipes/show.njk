{% extends 'headerAdmin.njk' %}

{% block content %}

<main class="card-recipes">
  <div class="title-show-recipes-admin">
    <h2>Receita: {{recipe.title}}</h2>
    <a href="/admin/recipes/{{recipe.id}}/edit" class="edit-recipe">Editar receita</a>
  </div>

  <div class="images-container">
    <div id="image-recipe">
        <img src="/pizza.png" alt="{{recipe.title}}">
    </div>
    <div class="container-images-thumbnails">
      <div class="images-thumbnails">
        <img src="/chef.png" alt="...">
        <img src="/burger.png" alt="...">
        <img src="/pizza.png" alt="...">
      </div>
    </div>
  </div>
  
  <article class="recipe-title">
    <h1>{{recipe.title}}</h1>
    <h2>por {{recipe.chef_name}}</h2>
  </article>

  <section class="recipe-main">
    
    <div class="details">
      <div class="flex-teme">
        <h2>Ingredientes</h2>  
        <h3 class="button">Esconder</h3>
      </div>
      <div class="content">
        <ul>
        {% for ingredient in recipe.ingredients %}
          <li>{{ingredient}}</li>
        {% endfor %}
        </ul>
      </div>
    </div>
    
    <div class="details">
      <div class="flex-teme">
        <h2>Modo de Preparo</h2>  
        <h3 class="button">Esconder</h3>
      </div>
      <div class="content">
        <ul>
        {% for preparation in recipe.preparation %}
          <li>{{preparation}}</li>
        {% endfor %}
        </ul>
      </div>
    </div>
    
    <div class="details">
      <div class="flex-teme">
        <h2>Informações adicionais</h2>  
        <h3 class="button">Esconder</h3>
      </div>
      <div class="content">
        <p>{{recipe.information}}</p>
      </div>
  </section>
</main>
  {% include "scriptShow.njk" %}

{% endblock %}